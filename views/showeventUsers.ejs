<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Page</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <% events.forEach(event=>{ %>
    <!-- a event table -->
    <table style="width: 50%">
      <tr>
        <th>Event Details</th>
        <th>
          <a href="/registerEvent/<%=event.id %>/"><button>Register</button></a>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th><%= event.name %></th>
      </tr>
      <tr>
        <th>Location</th>
        <th><%= event.location %></th>
      </tr>
      <tr>
        <th>Date</th>
        <th><%= event.day %>/<%= event.month %>/<%= event.year %></th>
      </tr>
    </table>
    <br /><br />
    <% }) %>
  </body>
</html>
